@startuml
!include ../style.puml
skinparam ArrowFontStyle plain
skinparam sequenceArrowFontSize 20
skinparam sequenceParticipantFontSize 20

box Logic LOGIC_COLOR_T1
participant ":LogicManager" as LogicManager LOGIC_COLOR
participant ":AddressBookParser" as AddressBookParser LOGIC_COLOR
participant ":SetWeekCommandParser" as SetWeekCommandParser LOGIC_COLOR
participant "w:Week" as Week LOGIC_COLOR
participant "s:SetWeekCommand" as SetWeekCommand LOGIC_COLOR
participant "r:CommandResult" as CommandResult LOGIC_COLOR
end box

box Model MODEL_COLOR_T1
participant "m:Model" as Model MODEL_COLOR
 participant "LabList" as LabList MODEL_COLOR
  participant "ExerciseList" as ExerciseList MODEL_COLOR
end box

[-> LogicManager : execute("set-week 4")
activate LogicManager

LogicManager -> AddressBookParser : parseCommand(...)
activate AddressBookParser

create SetWeekCommandParser
AddressBookParser -> SetWeekCommandParser
activate SetWeekCommandParser

SetWeekCommandParser --> AddressBookParser
deactivate SetWeekCommandParser

AddressBookParser -> SetWeekCommandParser : parse(...)
activate SetWeekCommandParser

create Week
SetWeekCommandParser -> Week : new Week(4)
activate Week

Week --> SetWeekCommandParser
deactivate Week

create SetWeekCommand
SetWeekCommandParser -> SetWeekCommand : new SetWeekCommand(w)
activate SetWeekCommand

SetWeekCommand --> SetWeekCommandParser :
deactivate SetWeekCommand

SetWeekCommandParser --> AddressBookParser : s
deactivate SetWeekCommandParser
'Hidden arrow to position the destroy marker below the end of the activation bar.
SetWeekCommandParser -[hidden]-> AddressBookParser
destroy SetWeekCommandParser

AddressBookParser --> LogicManager : s
deactivate AddressBookParser

LogicManager -> SetWeekCommand : execute(m)
activate SetWeekCommand

SetWeekCommand -> Model : saveAddressBook()
activate Model

Model --> SetWeekCommand
deactivate Model

SetWeekCommand -> Model : setCurrentWeek(w)
activate Model

Model --> SetWeekCommand
deactivate Model

SetWeekCommand -> LabList : setCurrentWeek(weekNumber)
SetWeekCommand -> ExerciseList : setCurrentWeek(weekNumber)

create CommandResult
SetWeekCommand -> CommandResult
activate CommandResult

CommandResult --> SetWeekCommand
deactivate CommandResult

SetWeekCommand --> LogicManager : r
deactivate SetWeekCommand

[<-- LogicManager
deactivate LogicManager

@enduml
